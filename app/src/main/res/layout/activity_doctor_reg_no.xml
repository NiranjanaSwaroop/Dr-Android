<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miniproject.drandroid.DoctorRegNo">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/InfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"

            android:text="What's Your Register Number?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#CD2626"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Info2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/InfoTextView"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Medical registration number helps to identify you"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="25sp" />

        <Button
            android:id="@+id/continueRegNoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="108dp"
            android:background="@android:color/holo_red_dark"
            android:text="Continue"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/regNoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Info2TextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
