<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miniproject.drandroid.DoctorName">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/InfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:singleLine="true"
            android:text="What's Your Name?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#CD2626"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Info2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/InfoTextView"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Using your real name makes it easier for users to recognize you."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nameDocText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Info2TextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/continueNameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@android:color/holo_red_dark"
            android:text="Continue"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:layout_below="@+id/nameDocText"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
