<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miniproject.drandroid.PatViewPrescrip">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/queryInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For your queries:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/queryListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/queryInfoTextView"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/prescripInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Prescription:"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:layout_below="@+id/queryListTextView"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/viewPrescripButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/prescripInfoTextView"
            android:layout_marginTop="29dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="showPres"
            android:text="View"
            android:textColor="@android:color/background_light" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
