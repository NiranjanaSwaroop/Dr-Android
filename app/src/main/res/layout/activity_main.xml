<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miniproject.drandroid.MainActivity">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:alpha="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/doctorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/patientTextView"
                    android:layout_alignBottom="@+id/patientTextView"
                    android:layout_alignEnd="@+id/welcomeTextView"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/holo_blue_bright"
                    android:onClick="enterDoctor"
                    android:text="Doctor"
                    android:textColor="@android:color/background_light"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/background_light"
                    android:text="Welcome to Dr.Android"
                    android:textColor="@android:color/black"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/patientTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/welcomeTextView"
                    android:layout_marginTop="69dp"
                    android:background="@android:color/holo_blue_dark"
                    android:onClick="enterPaient"
                    android:text="Patient"
                    android:textColor="@android:color/background_light"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/guestTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary"
                    android:onClick="showAbout"
                    android:text="Guest"
                    android:textColor="@android:color/background_light"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/noteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/welcomeTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:text="You are :-"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
